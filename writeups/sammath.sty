\newcommand{\customtitle}[1]{\begin{center}\Huge #1\end{center}}                                    % big centered title
\newcommand{\customsubtitle}[1]{\begin{center}\large #1 \\ \customdate\end{center}}                 % subtitle with date
\newcommand{\customdate}{\the\year-{\ifnum\month<10 0\fi\the\month}-{\ifnum\day<10 0\fi\the\day}}   % date in yyyy-mm-dd format

\newcounter{csection} \setcounter{csection}{-1}
\newcounter{csubsection}
\newcounter{csubsubsection}
\newcommand{\customsection}[1]{\vspace{6mm} \addtocounter{csection}{1} \par\noindent{\bf \large \arabic{csection}. #1} \setcounter{csubsection}{-1} \newline}
\newcommand{\customsubsection}[1]{\vspace{4mm} \addtocounter{csubsection}{1} \par\noindent{\large \arabic{csection}.\arabic{csubsection}. #1} \setcounter{csubsubsection}{-1} \newline}
\newcommand{\customsubsubsection}[1]{\vspace{2mm} \addtocounter{csubsubsection}{1} \par\noindent\textit{\normalsize \arabic{csection}.\arabic{csubsection}.\arabic{csubsubsection}. #1} \newline}
